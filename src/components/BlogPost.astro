---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  author: string;
  slug: string;
  emoji?: string;
}

const { title, description, pubDate, author, slug, emoji } = Astro.props;
import { format } from 'date-fns';
---

<article class="border-b py-8">
  <div class="max-w-3xl mx-auto relative">
    {emoji && (
      <span class="absolute -left-5 text-2xl">
        {emoji}
      </span>
    )}
    <div class="px-4">
      <a href={`/blog/${slug}`} class="group">
        <h2 class="text-2xl font-semibold mb-2 group-hover:text-gray-600">{title}</h2>
        <p class="text-gray-600 mb-4">{description}</p>
        <div class="text-sm text-gray-500">
          <time datetime={pubDate.toISOString()}>{format(pubDate, 'MMM d, yyyy')}</time>
        </div>
      </a>
    </div>
  </div>
</article>